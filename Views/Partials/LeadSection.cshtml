@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.Blocks
@{
    var leadImage = ViewData["image"];
    var leadTitle = ViewData["title"];
    var leadSubtitle = ViewData["subtitle"];
    var leadNote = ViewData["note"];
    var leadSubjects = ViewData["subjects"] as string[];
}
<section class="lead_section side_section" id="lead_section">
		<div class="innerpage">
			<div class="row">
				<div class="image sm-global sm-imagereveal parallax" data-smprop='{"type":"class","threshold":0.15}'
					data-translatey="0.35" data-ease="0.09">
					<div class="bg parallax-move">
						<div class="cover" style="background-image:url(@leadImage);"></div>
					</div>
				</div>
				<div class="content">
					<div class="table">
						<div class="table-cell">
							<h2 class="title_section title-2 sm-global sm-splittext"
								data-smprop='{"type":"split","threshold":0.02}'>@leadTitle</h2>
							<p class="paragraph sm-global sm-fadein" data-smprop='{"type":"class","threshold":0.1}'><strong
									class="font_xl">@leadSubtitle</strong><br />@leadNote</p>
							<form class="form_ui font_m clear sm-global sm-fadein"
							data-smprop='{"type":"class","threshold":0.1}'>
								<div class="input_c must">
									<div class="input">
										<input type="text" id="input_1" class="input_text" required />
										<label for="input_1" class="label">שם פרטי</label>
									</div>
								</div>
								<div class="input_c must">
									<div class="input">
										<input type="text" id="input_2" class="input_text" required />
										<label for="input_2" class="label">שם משפחה</label>
									</div>
								</div>
								<div class="input_c must">
									<div class="input">
										<input type="text" id="input_3" class="input_text" required />
										<label for="input_3" class="label">טלפון</label>
									</div>
								</div>
								<div class="input_c must">
									<div class="input">
										<input type="text" id="input_4" class="input_text" required />
										<label for="input_4" class="label">דוא"ל</label>
									</div>
								</div>
								<div class="input_c">
									<select class="cselect" data-placeholder="נושא הפנייה">
										<option>נושא הפנייה</option>
										@foreach (var subject in leadSubjects)
										{
											<option value="@subject">@subject</option>
										}
									</select>
								</div>
								<div class="input_c">
									<div class="input input_textarea">
										<textarea id="input_6" class="input_text" rows="1"></textarea>
										<label for="input_6" class="label">על מה תרצו לדבר איתנו</label>
									</div>
								</div>
								<div class="sep"></div>
								<div class="input_c">
									<div class="checkbox font_r"><input type="checkbox" name="checkbox" /><label>אני מסכימ/ה
											להיות בקשר במייל או סמס</label></div>
								</div>
								<div class="input_submit input_c clear">
									<button type="submit" class="btn"><span>שליחה</span></button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>